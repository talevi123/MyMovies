<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fcf="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#0b0a0a"
    android:id="@+id/lin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Movie Details"
        android:textColor="#ffffff"
        android:layout_marginBottom="20dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_insert_photo"
            android:background="#302d2d" />

        <Button
            android:id="@+id/camBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:layout_marginTop="5dp"
            android:paddingRight="10dp"
            android:layout_below="@id/icon"
            android:drawableLeft="@android:drawable/ic_menu_camera"
            android:text="Camera"
            android:background="#605a5a"
            android:layout_alignBottom="@+id/ratingBar"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/icon"
            android:hint="Title"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:background="#302d2d"
            android:textColorHint="#fdfdfd" />

        <EditText
            android:id="@+id/director"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/icon"
            android:layout_marginLeft="10dp"
            android:hint="director"
            android:textSize="15sp"
            android:background="#302d2d"
            android:textColorHint="#fdfdfd" />

        <EditText
            android:id="@+id/genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/director"
            android:layout_toRightOf="@id/icon"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Language"
            android:textSize="15sp"
            android:background="#302d2d"
            android:textColorHint="#fdfdfd" />

        <EditText
            android:id="@+id/min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/genre"
            android:layout_toRightOf="@id/icon"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Running time"
            android:textSize="15sp"
            android:background="#302d2d"
            android:textColorHint="#fdfdfd" />

        <EditText
            android:id="@+id/r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rating"
            android:layout_below="@id/min"
            android:layout_toRightOf="@+id/icon"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:background="#302d2d"
            android:textColorHint="#fdfdfd"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/r"
            android:layout_toRightOf="@id/icon"
            android:layout_marginBottom="5dp"
            android:numStars="5"
            android:stepSize="0.5"
            android:rating="0.0"
            android:progressTint="#c9d729"
            android:progressBackgroundTint="#faf3f3" />

    </RelativeLayout>

    <View
        android:background="#736868"
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/lin"/>

    <TextView
        android:id="@+id/titlePlot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="left"
        android:text="Plot"
        android:textSize="20sp"
        android:textColor="#fdfdfd" />

    <EditText
        android:id="@+id/plot"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="15sp"
        android:background="#302d2d"
        android:textColorHint="#fdfdfd"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Gallery"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp">

        <Button
            android:id="@+id/CanBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="60dp"
            android:text="Cancel"/>

        <Button
            android:id="@+id/SaveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Save Changes"
            android:layout_toRightOf="@id/CanBtn" />

    </RelativeLayout>


</LinearLayout>
